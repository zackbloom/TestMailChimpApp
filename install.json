{
  "resources": {
    "body": [
      {
        "type": "script",
        "src": "./helper.js"
      }
    ]
  },
  "options": {
    "properties": {
      "account": {
        "title": "Account",
        "type": "object",
        "format": "account",
        "services": ["mailchimp"],
        "order": 0
      },
      "list": {
        "title": "List",
        "description": "Select the list in your account which email submissions should be added to",
        "type": "string",
        "showIf": "account.username",
        "order": 1
      },
      "location": {
        "title": "Location",
        "description": "Where should the form be placed?",
        "type": "object",
        "format": "element",
        "order": 2
      }
    }
  },
  "hooks": [
    {
      "endpoint": "http://provisioner.eager.io/mailchimp/hook",
      "events": ["oauth-login", "account-logout", "preview", "client:submit"],
      "block": true,
      "authenticate": ["account"],
      "failure": {
        "action": "notify",
        "message": "There was an error communicating with MailChimp."
      }
    }
  ]
}

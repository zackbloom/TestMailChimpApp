{
  "resources": {},
  "options": {
    "properties": {
      "account": {
        "title": "Account",
        "type": "object",
        "format": "account",
        "services": ["mailchimp"],
        "order": 0
      }
    }
  },
  "hooks": [
    {
      "endpoint": "http://provisioner.eager.io/mailchimp/hook",
      "events": ["oauth-login", "option-change"],
      "block": true,
      "authenticate": ["account"],
      "failure": {
        "action": "notify",
        "message": "There was an error communicating with MailChimp."
      }
    }
  ]
}

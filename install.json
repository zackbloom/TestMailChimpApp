{
  "resources": {
    "body": [
      {
        "type": "script",
        "src": "./helper.js"
      }
    ]
  },
  "options": {
    "properties": {
      "account": {
        "title": "Account",
        "type": "object",
        "format": "account",
        "services": ["mailchimp", "campaign-monitor"],
        "order": 0
      },
      "location": {
        "title": "Location",
        "description": "Where should the form be placed?",
        "type": "object",
        "format": "element",
        "order": 100
      }
    }
  },
  "hooks": [
    {
      "endpoint": "http://provisioner.eager.io/{{ install.options.account.service }}/hook",
      "events": ["option-change:account", "preview"],
      "block": true,
      "if": "install.options.account.service",
      "authenticate": ["account"],
      "failure": {
        "action": "notify",
        "message": "There was an error communicating with the mail service."
      }
    },
    {
      "events": ["account-logout"],
      "action": "reset-schema"
    }
  ]
}
